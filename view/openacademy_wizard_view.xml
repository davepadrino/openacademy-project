<?xml version="1.0" encoding="UTF-8"?> 
 <openerp>
    <data>
        <record model="ir.ui.view" id="wizard_form_view">
            <field name="name">wizard.form</field>
            <field name="model">openacademy.wizard</field>
            <field name="arch" type="xml">
                <form string="Agregar Asistentes">
                    <group>
                        <field name="session_wiz_id"/>
                        <field name="attendee_wiz_ids"/>
                    </group>
                    <footer>
                     	<button name="subscribe" type="object"
                                string="Subscribe" class="oe_highlight"/>
                        or
                        <!--special es un destructor-->
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>

		<!-- src_model: en donde aparecera el boton, res_model: a donde me llevarÃ¡, view_mode: en que modalidad de vista, key2: para que aparezca tanto en la isdta formulario como en tree, puede ejecutarse en muchas sesiones-->
        <act_window id="launch_session_wizard"
                    name="Agregar Attendees"
                    src_model="openacademy.session" 
                    res_model="openacademy.wizard"
                    view_mode="form"
                    target="new"
                    key2="client_action_multi"/>
    </data>
</openerp>